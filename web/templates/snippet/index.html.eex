<!-- TODO: The following index view is just based on the default Phoenix views.
  We should probably wireframe out a better template for this. -->

<div class="container mt-4">
  <main role="main">
    <h2>Listing snippets</h2>

    <table class="table">
      <thead>
        <tr>
          <th>Title</th>
          <th>Description</th>

          <th></th>
        </tr>
      </thead>
      <tbody>
    <%= for snippet <- @snippets do %>
        <tr>
          <td><%= snippet.title %></td>
          <td><%= snippet.description %></td>

          <td class="text-right">
            <%= link "Show", to: snippet_path(@conn, :show, snippet), class: "btn btn-secondary btn-sm" %>
            <%= link "Edit", to: snippet_path(@conn, :edit, snippet), class: "btn btn-secondary btn-sm" %>
            <%= link "Delete", to: snippet_path(@conn, :delete, snippet), method: :delete, data: [confirm: "Are you sure?"], class: "btn btn-danger btn-sm" %>
          </td>
        </tr>
    <% end %>
      </tbody>
    </table>

    <%= link "New snippet", to: snippet_path(@conn, :new) %>
  </main>
</div>
