<h2>Show snippet</h2>

<ul>

  <li>
    <strong>Title:</strong>
    <%= @snippet.title %>
  </li>

  <li>
    <strong>Body:</strong>
    <pre>
    <%= @snippet.body %>
    </pre>
  </li>

  <li>
    <strong>Description:</strong>
    <%= @snippet.description %>
  </li>

</ul>

<%= link "Edit", to: snippet_path(@conn, :edit, @snippet) %>
<%= link "Back", to: snippet_path(@conn, :index) %>
